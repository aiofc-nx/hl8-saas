{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "nodenext",
    "types": ["node"],
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../packages/utils/tsconfig.lib.json"
    },
    {
      "path": "../../packages/logger/tsconfig.lib.json"
    },
    {
      "path": "../../packages/database/tsconfig.lib.json"
    },
    {
      "path": "../../packages/core/tsconfig.lib.json"
    },
    {
      "path": "../../packages/contracts/tsconfig.lib.json"
    },
    {
      "path": "../../packages/constants/tsconfig.lib.json"
    },
    {
      "path": "../../packages/config/tsconfig.lib.json"
    },
    {
      "path": "../../packages/common/tsconfig.lib.json"
    }
  ]
}
